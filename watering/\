# GPIO.output(channel, 1)
def switch_pump()

class PumpDriver:
    channel=26
    output=GPIO.LOW

    def __init__():
        if not GPIO.getmode() == BPIO.BOARD:
            GPIO.setmode(GPIO.BOARD)
        GPIO.setup(self.channel, GPIO.OUT, initial=self.output)
    
    def switch():
        new_state = GPIO.LOW if self.output == GPIO.HIGH else GPIO.LOW
        GPIO.output(channel, new_state)
        self.output = new_state
        return new_state

